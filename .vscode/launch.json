  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Attach",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\sandbox\\Sandbox.exe",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "CMake/Launch - Sandbox",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}", // This sets working directory to project root
      "args": []
    }
  ]
}